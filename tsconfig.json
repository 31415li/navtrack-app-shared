{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module": "es6",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "rootDir": "src"
  },

  "exclude": [
    "node_modules",
    "dist"
  ],
}
