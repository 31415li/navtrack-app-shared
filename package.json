{
  "name": "@navtrack/navtrack-shared",
  "version": "1.0.3",
  "description": "Shared library for the Navtrack web and mobile apps.",
  "author": {
    "name": "CodeAgency",
    "email": "support@navtrack.com"
  },
  "main": "dist/index.js",
  "scripts": {
    "build:watch": "npx tsc --build --watch",
    "sync": "rm -rf ../navtrack-mobile/node_modules/@navtrack/navtrack-shared/dist/* && cp -r ./dist ../navtrack-mobile/node_modules/@navtrack/navtrack-shared/",
    "sync:watch": "watch 'npm run sync' ./dist",
    "build:sync": "concurrently \"npm run build:watch\" \"npm run sync:watch\""
  },
  "prepublish": "tsc",
  "devDependencies": {
    "@types/react": "^17.0.38",
    "concurrently": "^7.0.0",
    "typescript": "^4.5.5",
    "watch": "^1.0.2"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/navtrack/navtrack-shared.git"
  },
  "typings": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  }
}
